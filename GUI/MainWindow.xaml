<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Mediana filter" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Margin="12,12,16,71" Name="imgBase" 
        Stretch="Fill" Grid.Column="0" />

        <Image Margin="12,12,16,71" Name="imgFilter" 
        Stretch="Fill" Grid.Column="1"/>

        <Button Height="23" HorizontalAlignment="Left" 
        Margin="30,0,0,30" Name="btnLoad" VerticalAlignment="Bottom" 
        Width="75" Grid.Column="0" Click="btnLoad_Click">_Load</Button>

        <Button Height="23" HorizontalAlignment="Left" 
        Margin="30,0,0,30" Name="btnFilter" VerticalAlignment="Bottom" 
        Width="75" Grid.Column="1" Click="btnFilterSeq_Click">_Filtrowanie seq</Button>

        <Button Height="23" HorizontalAlignment="Left" 
        Margin="130,0,0,30" Name="btnFilterSync" VerticalAlignment="Bottom"
        Width="75" Grid.Column="1" Click="btnFilterSync_Click">F_iltrowanie sync</Button>

        <Label Name="TimeSeq" Content="Czas seq:" Margin="128,316,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="TimeSync" Content="Czas sync:" Margin="128,338,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="sizeMatrix" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="226,320,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="69" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="countThread" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="309,320,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="77" PreviewTextInput="NumberValidationTextBox"/>
        <Label x:Name="TimeSeq_Copy" Content="rozmiar filtra" Grid.Column="1" Margin="226,294,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="TimeSync_Copy" Content="ilosc watkow" Grid.Column="1" Margin="309,294,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Grid>
</Window>
